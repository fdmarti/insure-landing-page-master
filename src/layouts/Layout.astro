---
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='Astro description' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/icon' href='/images/favicon-32x32.png' />

		<link rel='preconnect' href='https://fonts.googleapis.com' />
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
		<link
			href='https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Karla:wght@400;700&display=swap'
			rel='stylesheet'
		/>
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--darkVioleta: hsl(256, 26%, 20%);
		--grayishViole: hsl(216, 30%, 68%);
		--veryDarkViolet: hsl(270, 9%, 17%);
		--darGreyisViolet: hsl(273, 4%, 51%);
		--veryLightGray: hsl(0, 0%, 98%);

		--dmSerif: 'DM Serif Display', serif;
		--karla: 'Karla', sans-serif;
	}

	* {
		margin: 0;
		padding: 0;
		font-family: var(--karla);
	}

	html {
		scroll-behavior: smooth;
	}

	.max-w {
		max-width: 1440px;
		margin: 0 auto;
		padding: 0 20px;
	}


	h1,
	h2,
	h3,
	h4 {
		font-family: var(--dmSerif);
	}

	h1,
	h2,
	h3 {
		font-size: 76px;
		letter-spacing: 1px;
		font-weight: 400;
		line-height: 70px;
		position: relative;
	}

	h1::before,
	h2::before {
		content: '';
		width: 200px;
		height: 1px;
		position: absolute;
		top: -80px;
	}

	li {
		list-style: none;
		text-transform: uppercase;
		font-size: 15px;
		font-weight: 700;
	}

	a {
		text-decoration: none;
		color: var(--darkVioleta);
	}

	a:hover {
		text-decoration: underline;
	}

	@media (max-width: 1200px) {
		h1,
		h2 {
			text-align: center;
			font-size: 52px;
			line-height: 45px;
		}

		h1::before {
			display: none;
		}

		h2::before {
			top: -40px;
			width: 150px;
		}
	}
</style>
