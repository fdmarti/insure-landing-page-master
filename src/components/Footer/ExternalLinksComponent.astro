---
const { title = 'Default title', links = [] } = Astro.props;
---

<div class='list-links'>
	<h5>{title}</h5>
	<ul>
		{
			links.map((link) => (
				<li>
					<a href={link.link}>{link.title}</a>
				</li>
			))
		}
	</ul>
</div>
<style>
	.list-links {
		display: flex;
		flex-direction: column;
		gap: 2.5rem;
	}

	.list-links h5 {
		text-transform: uppercase;
		font-size: 15px;
		color: var(--darGreyisViolet);
	}

	.list-links ul {
		display: flex;
		flex-direction: column;
		gap: 1.2rem;
	}

	@media (max-width: 1200px) {
		.list-links {
			text-align: center;
		}
	}
</style>
